{
  "name": "facturas-gestor",
  "version": "1.0.0",
  "description": "Gestor simple de facturas (PDF/imagenes) con drag-and-drop",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "sass": "sass public/styles.scss public/styles.css",
    "sass:watch": "sass --watch public:public",
    "dev": "concurrently \"npm run sass:watch\" \"node server.js\""
  },
  "dependencies": {
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "sass": "^1.97.3"
  }
}
